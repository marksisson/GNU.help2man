AC_INIT(help2man.PL)
AC_PATH_PROG(PERL, perl)
if test -z "$PERL"; then
  AC_MSG_ERROR([perl not found])
fi
AC_MSG_CHECKING(perl version)
if $PERL -e 'printf "%g\n", $]; exit($] >= 5.004);'; then
  AC_MSG_ERROR([perl 5.004 required])
fi
AC_PROG_INSTALL
AC_OUTPUT(Makefile)
